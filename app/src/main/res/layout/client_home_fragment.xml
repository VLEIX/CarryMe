<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".ui.client.ClientHomeFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        app:hintTextAppearance="@style/TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtPlaceOrigin"
            style="@style/EditText"
            android:background="@drawable/selector_edittext"
            android:drawableLeft="@drawable/ic_location_outline"
            android:drawablePadding="@dimen/dimen_16"
            android:hint="@string/lang.client.hint.origin"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="0dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        app:hintTextAppearance="@style/TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtPlaceDestination"
            style="@style/EditText"
            android:background="@drawable/selector_edittext"
            android:drawableLeft="@drawable/ic_location_outline"
            android:drawablePadding="@dimen/dimen_16"
            android:hint="@string/lang.client.hint.destination"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingLeft="0dp"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
