<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/login_fragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        app:hintTextAppearance="@style/TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtEmail"
            style="@style/EditText"
            android:background="@drawable/selector_edittext"
            android:drawableLeft="@drawable/ic_email_outline"
            android:drawablePadding="@dimen/dimen_16"
            android:hint="@string/lang.login.hint.email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        app:hintTextAppearance="@style/TextInputLayout"
        app:passwordToggleEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtPassword"
            style="@style/EditText"
            android:background="@drawable/selector_edittext"
            android:drawableLeft="@drawable/ic_lock_outline"
            android:drawablePadding="@dimen/dimen_16"
            android:hint="@string/lang.login.hint.password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="0dp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/Button.Primary"
        android:layout_marginTop="@dimen/dimen_24"
        android:text="@string/lang.login.button.login"/>

    <Button
        android:id="@+id/btnLoginFacebook"
        style="@style/Button.Facebook"
        android:layout_marginTop="@dimen/dimen_12"
        android:text="@string/lang.login.button.loginFacebook"/>

    <Button
        android:id="@+id/btnSignUp"
        style="@style/Button"
        android:layout_marginTop="@dimen/dimen_12"
        android:background="@color/transparent"
        android:text="@string/lang.login.button.signUp"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"/>
</LinearLayout>