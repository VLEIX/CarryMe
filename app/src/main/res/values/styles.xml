<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Override the ActionMode Style -->
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_44</item>
    </style>

    <style name="Button.Accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_button_accent</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:background">@drawable/selector_button_primary</item>
    </style>

    <style name="Button.Facebook">
        <item name="android:textColor">@color/selector_button_primary_text</item>
        <item name="android:background">@drawable/selector_button_facebook</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_44</item>
        <item name="android:paddingLeft">@dimen/dimen_8</item>
        <item name="android:paddingRight">@dimen/dimen_8</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
